{
  "name": "wpgbingo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tw:build": "tailwindcss build src/tailwind.css -o dist/style.css",
    "site:rm": "rimraf dist/*",
    "site:build": "copyfiles -u 1 -e \"**/tailwind.css\" src/**/*.{html,js,css} ./dist/",
    "build": "run-s tw:build site:rm site:build",
    "tw:watch": "tailwindcss build src/tailwind.css -o dist/style.css --watch",
    "site:watch": "nodemon -e html,js,css -w src --exec \"npm run site:build\"",
    "serve": "npx serve dist",
    "dev": "run-p tw:watch site:watch serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JLambertazzo/wpgbingo.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JLambertazzo/wpgbingo/issues"
  },
  "homepage": "https://github.com/JLambertazzo/wpgbingo#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4"
  }
}
